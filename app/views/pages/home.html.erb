<div class="jumbotron">
  <h1>The shop</h1>

  <% if current_user %>
    <p>Welcome, <b><%= current_user.user_name %></b>!</p>
  <% else %>
    <p>Welcome! Start by logging in.</p>
    <p>
      <%= link_to 'Log in', '/auth/twitter', class: 'btn btn-lg btn-primary' %>
    </p>
  <% end %>
</div>

<div class="row">
  <%= render 'cart' %>

  <div class="col-sm-8">
    <table class="table table-striped table-hover" id="products">
      <tr>
        <th>Title</th>
        <th>Desciption</th>
        <th></th>
      </tr>

      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.desc %></td>
          <% if current_user %>
            <td><%= link_to 'To cart', add_to_cart_path(product), method: :post, class: 'btn btn-primary',
                            remote: true %></td>
          <% else %>
            <td>Login to purchase!</td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>